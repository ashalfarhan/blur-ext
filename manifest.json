{
  "name": "Blurrify",
  "version": "1.0",
  "manifest_version": 3,
  "description": "Make the active tab blur",
  "permissions": ["activeTab", "scripting", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tap": false
  },
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png"
    }
  }
}
